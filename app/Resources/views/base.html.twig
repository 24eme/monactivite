<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Mon activité{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <nav class="navbar navbar-default navbar-fixed-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-main-element">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="{{ path('timeline') }}">Mon Activité</a>
            </div>

            <div class="collapse navbar-collapse" id="nav-main-element">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('tag') }}"><span class="glyphicon glyphicon-tags"></span>&nbsp;&nbsp;Tags</a></li>
                    <li><a href="{{ path('filter') }}"><span class="glyphicon glyphicon-filter"></span>&nbsp;&nbsp;Filtres</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-upload"></span>&nbsp;&nbsp;Sources</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-cog"></span>&nbsp;&nbsp;Config</a></li>
                </ul>
            </div>

          </div>
        </nav>
        <div class="container" style="padding-top: 70px;">
        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
