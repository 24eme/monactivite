{% extends 'base.html.twig' %}

{% block body %}
    
<div class="row">
    <div class="col-lg-12">
        {% for date, activities in activitiesByDates %}
        <div class="row">
        <div class="col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title">{{ date | date('D d M Y')}}</h3></div>
            <ul class="list-group">
                {% for activity in activities %}
                    <li class="list-group-item" style="padding: 6px 0px;">
                            
                            <div style="width: 0; padding-right: 30px; padding-top: 5px; padding-bottom: 0;opacity: 0.6;" class="col-xs-1 text-left text-muted">
                               <span style="font-size: 20px">{{ activity.executedAt | date('H') }}</span>&nbsp;h
                            </div>
                            <div class="col-xs-8">
                            <span style="font-size: 15px;">{{ activity.title }}</span><br />
                            <small class="text-muted" style="opacity: 0.5; padding-bottom: 0;">
                            {% for attribute in activity.getAttributes() %}
                                {{ attribute.value }},
                            {% endfor %}
                            </small>
                            </div>
                            <div class="col-xs-3 text-left" style="padding-top: 4px;">
                            <div class="btn-group">
                                {% for tag in activity.getTags() %}
                                <button class="btn btn-sm btn-default">{% if(tag.icon) %}<span class="glyphicon glyphicon-{{ tag.icon }}"></span> {% endif %}{{ tag.name }}</button>
                                {% endfor %}
                            </div>
                            </div>
                            <div class="clearfix"></div>
                    </li>
                {% endfor %}
            </li>
        </div>
        </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
