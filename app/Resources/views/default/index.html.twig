{% extends 'base.html.twig' %}

{% block body %}
    
<div class="row">
    <div class="col-lg-12 col-md-6">
        {% for date, activities in activitiesByDates %}
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title">{{ date | date('D d M Y')}}</h3></div>
            <ul class="list-group">
                {% for activity in activities %}
                    <li class="list-group-item">
                        <div class="btn-group">
                            {% for tag in activity.getTags() %}
                            <button class="btn btn-sm btn-default">{% if(tag.icon) %}<span class="glyphicon glyphicon-{{ tag.icon }}"></span> {% endif %}{{ tag.name }}</button>
                            {% endfor %}
                        </div><br />
                        {{ activity.title }}
                        <small><ul class="list-inline text-muted">
                        {% for attribute in activity.getAttributes() %}
                            <li>{{ attribute.value }}</li>
                        {% endfor %}
                        </ul></small>
                    </li>
                {% endfor %}
            </ul>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
