{% extends '::base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
              <div class="panel-heading">Ajouter une source</div>
              <div class="panel-body">
                {{ form(form) }}
              </div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">Liste des sources</div>
                <div class="list-group">
                {% for entity in entities %}
                    <a href="{{ path('source_edit', {'id': entity.id }) }}" class="list-group-item">
                         <div class="col-xs-1">
                            {{ entity.importer }}
                        </div>
                        <div class="col-xs-2">
                        {{ entity.name }}
                        </div>
                        <div class="col-xs-9">{{ entity.source }}</div>
                        <div class="clearfix"></div>
                    </a>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
